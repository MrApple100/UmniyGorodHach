
<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.UmniyGorodHach" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/accent</item>
    <item name="colorPrimaryVariant">@color/accent</item>
    <item name="colorOnPrimary">@color/black</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/accent</item>
    <item name="colorSecondaryVariant">@color/accent</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    <!-- Customize your theme here. -->
</style>

<style name="Theme.UmniyGorodHach.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>

<style name="Theme.UmniyGorodHach.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

<style name="Theme.UmniyGorodHach.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<style name="Theme.App.Starting" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@android:color/background_dark</item>

    <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>

    <item name="postSplashScreenTheme">@style/Theme.UmniyGorodHach.NoActionBar</item>
</style>
</resources>